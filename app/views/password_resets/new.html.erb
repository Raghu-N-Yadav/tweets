<h1 class="text-muted d-flex justify-content-center">Forgot Password ?</h1>

<%= form_with url: password_reset_path do |form|%>

  <div class="mb-3">
    <%= form.label :email, class:"mb-2"%>
    <%= form.text_field :email, class:"form-control", placeholder: "abc@gmail.com"%>
  </div>

  <div class="mb-3">
    <%= form.submit "Reset Password", class:"btn btn-primary"%>
  </div>
<%end %>