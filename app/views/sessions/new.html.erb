<h1 class="text-muted d-flex justify-content-center">Sign In</h1>

<%= form_with url: sign_in_path do |form|%>

  <div class="mb-3">
    <%= form.label :email, class:"mb-2"%>
    <%= form.text_field :email, class:"form-control", placeholder: "abc@gmail.com"%>
  </div>
  <div class="mb-3">
    <%= form.label :password, class:"mb-2"%>
    <%= form.password_field :password, class:"form-control", placeholder:"password"%>
  </div>

  <div class="mb-3">
    <%= form.submit "Sign In", class:"btn btn-primary"%>
  </div>

  <%= link_to "Forgot password", password_reset_path, class:"nav-link ps-0" %>
<%end%>